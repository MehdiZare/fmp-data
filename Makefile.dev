# Building and Publishing
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

build: ## Build package for distribution
	@echo "$(BOLD)$(BLUE)ğŸ“¦ Building package...$(RESET)"
	uvx poetry build
	@echo "$(GREEN)âœ… Package built successfully!$(RESET)"
	@echo "$(CYAN)ğŸ“ Files created:$(RESET)"
	@ls -la dist/

build-check: ## Build and verify package with twine
	@echo "$(BOLD)$(BLUE)ğŸ“¦ Building and checking package...$(RESET)"
	uvx poetry build
	uvx twine check dist/*
	@echo "$(GREEN)âœ… Package built and verified!$(RESET)"

publish-test: build-check ## Publish to Test PyPI (requires TEST_PYPI_TOKEN)
	@echo "$(BOLD)$(YELLOW)ğŸ§ª Publishing to Test PyPI...$(RESET)"
	@echo "$(RED)âš ï¸  Make sure TEST_PYPI_TOKEN is set!$(RESET)"
	uvx twine upload --repository-url https://test.pypi.org/legacy/ dist/*

publish: build-check ## Publish to PyPI (requires PYPI_TOKEN)
	@echo "$(BOLD)$(RED)ğŸš€ Publishing to PyPI...$(RESET)"
	@echo "$(RED)âš ï¸  Make sure PYPI_TOKEN is set!$(RESET)"
	@read -p "Are you sure you want to publish to PyPI? (y/N) " -n 1 -r; \
	echo; \
	if [[ $$REPLY =~ ^[Yy]$$ ]]; then \
		uvx twine upload dist/*; \
	else \
		echo "$(YELLOW)Publishing cancelled.$(RESET)"; \
	fi

version: ## Show current version
	@echo "$(BOLD)$(BLUE)ğŸ“‹ Current version:$(RESET)"
	@uvx poetry version --short

version-bump-patch: ## Bump patch version (x.y.Z)
	@echo "$(BOLD)$(CYAN)ğŸ“ˆ Bumping patch version...$(RESET)"
	uvx poetry version patch
	@echo "$(GREEN)New version: $$(uvx poetry version --short)$(RESET)"

version-bump-minor: ## Bump minor version (x.Y.z)
	@echo "$(BOLD)$(CYAN)ğŸ“ˆ Bumping minor version...$(RESET)"
	uvx poetry version minor
	@echo "$(GREEN)New version: $$(uvx poetry version --short)$(RESET)"

version-bump-major: ## Bump major version (X.y.z)
	@echo "$(BOLD)$(CYAN)ğŸ“ˆ Bumping major version...$(RESET)"
	uvx poetry version major
	@echo "$(GREEN)New version: $$(uvx poetry version --short)$(RESET)"

